<div class="container">
    <h1>Recipe Details</h1>

    <hr>
    <div class="row">

        <div class="col-md-6">

            <div class="card" style="width: 35rem;">

                <img src="{{recipeData.imageUrl}}" class="card-img-top" alt="{{recipeData.title}}">

                <div class="card-body">
                    <h3 class="card-title">{{recipeData.title}}</h3>
                    <hr>
                    <h5 class="card-title">Location</h5>
                    <p class="card-text">{{recipeData.location.coordinates.[0]}} <br> {{recipeData.location.coordinates.[1]}} </p>
                    <h5>{{recipeData.description}}</h5>
                    <h5>Ingredients</h5>

                    <ul>
                        {{#each recipeData.ingredients}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>

                    <hr>

                    <h5>Directions</h5>

                    <ul>
                        {{#each recipeData.directions}}
                        <li>{{this}}</li>
                        {{/each}}

                    </ul>

                </div>

                <form action="/comments/{{recipeData._id}}/comment" method="POST">

                    <div class="mb-3">
                        <label for="comment" class="form-label">Add your comment here!</label>
                        <textarea class="form-control" id="comment" name="comment" rows="3"></textarea>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-dark">Comment</button>
                    </div>

                </form>

                <form action="/users/{{recipeData._id}}/favRecipes" method="POST" style="display: inline-block">
                    <input type="submit" value="FAV" name="FAV" id="FAV" class="btn btn-danger btn-sm">
                </form>

            </div>

        </div>

        <div class="col-md-6">

            <h2>Comments</h2>

            <hr>

            {{#each commentsData}}
            <p>{{comment}}</p>
            {{/each}}

        </div>

    </div>

</div>